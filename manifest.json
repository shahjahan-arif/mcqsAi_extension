{
  "manifest_version": 3,
  "name": "Quiz Solver AI",
  "version": "1.0.0",
  "description": "AI-powered quiz solver using Gemini API",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Quiz Solver AI"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/workers/detector.worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
